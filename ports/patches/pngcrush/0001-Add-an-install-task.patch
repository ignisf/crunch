diff --git a/Makefile b/Makefile
index e5de7d3..fa0ea14 100644
--- a/Makefile
+++ b/Makefile
@@ -14,6 +14,8 @@
 #ZINC = ../../zlib
 #ZLIB = ../../zlib
 
+DESTDIR=.
+
 CC = gcc
 LD = gcc
 RM = rm -f
@@ -90,3 +92,7 @@ $(PNGCRUSH)$(E): $(OBJS)
 
 clean:
 	$(RM) $(EXES) $(OBJS)
+
+install: $(PNGCRUSH)$(E)
+	mkdir -p ${DESTDIR}/bin/
+	cp $(PNGCRUSH)$(E) ${DESTDIR}/bin/
